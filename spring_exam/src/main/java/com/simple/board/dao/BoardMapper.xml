<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.simple.board.dao.BoardMapper">

    <resultMap id="boardMap" type="com.simple.board.vo.BoardVO">
        <id     property="idx"    	column="idx" />
        <result property="title"	column="title" />
        <result property="content"  column="content" />
        <result property="id"		column="id" />
        <result property="hit"		column="hit" />
        <result property="date"		column="date" />
    </resultMap>

    <select id="select" resultMap="boardMap">
        SELECT  * FROM TBOARD
    </select>

    <select id="selectOne" resultMap="boardMap">
        SELECT  * FROM TBOARD WHERE idx = #{idx}
    </select>

    <insert id="insert">
         INSERT INTO TBOARD ( title, id, content, date ) VALUES (
                #{user_name}
              , #{subject}
              , #{content}
              , #{date}
         )
    </insert>

    <update id="update">
         UPDATE TBOARD SET
              user_name = #{user_name},
              subject = #{subject},
              content = #{content},
              reg_datetime = #{reg_datetime}
         WHERE idx = #{idx} LIMIT 1
    </update>

    <delete id="delete">
         DELETE FROM TBOARD WHERE idx = #{idx}
    </delete>

</mapper>